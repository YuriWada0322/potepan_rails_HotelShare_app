<div class="container-fiuld user"> 
    <div class="row">
        <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
    <ul>
        <li class="active">アカウント</li>
    </ul>
</div>
        <div class="col-md-10 user-view">
            <div class="user-view-box">
                <div class="update-content">
                    <div class="row">
                        <h5>アカウント情報一覧</h5>
                    </div>
                </div>

                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="image">アイコン画像</label>
                        <% if @user.image? %>
                        <div class="col-md-9"><%= image_tag @user.image.url %></div>
                        <% end %>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="name">ユーザー名</label>
                        <div class="col-md-9"><%= @user.name %></div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="email">メールアドレス</label>
                        <div class="col-md-9"><%= @user.email %></div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="password">プロフィール</label>
                        <div class="col-md-9"><%= @user.profile %></div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="password">パスワード</label>
                        <div class="col-md-9">*********</div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <a class="col-md-2 btn btn-primary mx-3" href="/users/edit">編集</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
