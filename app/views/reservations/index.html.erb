<div class="container-fiuld reservations">
    <h4 class="pb-4">予約済みルーム一覧</h4>
      <table>
        <thead>
          <tr class="center">
            <th>ルーム画像</th>
            <th>ルーム名</th>
            <th>ルーム紹介</th>
            <th>合計料金</th>
            <th>チェックイン</th>
            <th>チェックアウト</th>
            <th>予約確定日時</th>
            <th>予約取り消し</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @reservations.each do |reservation| %>
            <tr>
              <td><img src="<%= reservation.room ? reservation.room.image_url : '' %>"></td>
              <td class="posts-name"><%= link_to reservation.room.room_name , room_path(reservation.room) %></td>
              <td class="posts-content"><%= reservation.room.description %></td>
              <td class="price-icon"><%= reservation.total.to_i %></td>
              <td><%= reservation.start_date %></td>
              <td><%= reservation.end_date %></td>
              <td><%= reservation.created_at %></td>
              <td><%= link_to 'キャンセル', reservation, method: :delete, data: { confirm: '本当に取り消しますか?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

</div>
