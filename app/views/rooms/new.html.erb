<div class="container-fiuld room-new">
  <div class="row">
    <div class="col-lg-2 room-nav room-nav-pc d-lg-block d-none">
      <ul>
        <li class= "active" ><%= link_to "基本情報", new_room_path %></li>
      </ul>
    </div>

    <div class="col-lg-10 room-view">
      <div class="room-view-box">
        <div class="update-content">
          <div class="row">
            <h5>ルーム情報登録</h5>
          </div>
        </div>

         <%= render "shared/error", obj: @room %>

         <%= form_for @room do |f| %>
            <div class="update-content">
              <div class="row">
                <label class="col-md-3 required-a">ルーム名</label>
                <%= f.text_field :room_name, autofocus: true, autocomplete: "ルーム名", placeholder: "ルーム名を入力",class: "form-control mb-4 col-md-9" %>
              </div>
            </div>

            <div class="update-content">
              <div class="row">
                <label class="col-md-3 required-a">ルーム紹介</label>
                <%= f.text_area :description, rows: 5, cols: 25, autofocus: true, autocomplete: "ルーム紹介", placeholder: "ルーム説明を入力", class: "form-control mb-4 col-md-9" %>
              </div>
            </div>

            <div class="update-content">
              <div class="row">
                <label class="col-md-3 required-a">料金</label>
                <%= f.number_field :price, autofocus: true, autocomplete: "料金", placeholder: "1日あたりの料金を入力", class: "form-control mb-4 col-md-9" %>
              </div>
            </div>

            <div class="update-content">
              <div class="row">
                <label class="col-md-3 required-a">住所</label>
                <%= f.text_field :address, autofocus: true, autocomplete: "住所", placeholder: "住所を入力", class: "form-control mb-4 col-md-9" %>
              </div>
            </div>

            <div class="update-content">
              <div class="row">
                <label class="col-md-3 required-a">ルーム画像</label></ br>
                <button type="button" class="btn btn-outline-secondary rounded-pill">
                  <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
                </button>
              </div>
            </div>

            <div class="update-content">
              <div class="row">
                <%= f.submit "登録", class:"col-md-2 btn btn-primary mx-3" %>
              </div>
            </div>
        <% end %>
       </div>
    </div>
  </div>
</div>
