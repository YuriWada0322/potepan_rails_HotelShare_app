<div class="container-fiuld room-posts">
  <h4 class="pb-4">登録済みルーム一覧</h4>

<table>
  <thead>
    <tr class ="center">
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>料金</th>
      <th>作成日</th>
      <th>削除</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td class="room-posts-image"><img src="<%= room.image_url %>"></td>
        <td class="posts-name"><%= link_to room.room_name, room %></td>
        <td class="posts-content"><%= room.description %></td>
        <td class="price-icon"><%= room.price %></td>
        <td><%= room.created_at %></td>
        <td><%= link_to '削除', room, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
